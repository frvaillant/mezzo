{% extends 'base.html.twig' %}

{% block title %}Caisse{% endblock %}

{% block body %}

<div class="main-block bg-white gap-5 p-2" >

    <div>
        <a href="{{ path('app_home') }}" class="button bg-teal-600 text-white shadow-md">
            Caisse du {{ date | date('d/m/Y') }}
        </a>
    </div>

    <div class="w-full">
        <table>
            <thead>
                <tr>
                    <th class="text-start">
                        Heure
                    </th>
                    <th class="text-center">
                        Montant
                    </th>
                    <th class="text-center">
                        Consignes
                    </th>
                    <th class="text-center">
                        Mode
                    </th>
                    <th class="text-end">
                        Total
                    </th>

                </tr>
            </thead>

            <tbody>
                {% set mainTotal = 0 %}
                {% set mainPaymentsTotal = [] %}
                {% for purchase in list %}

                    <tr
                        class="{{ purchase.account ? 'bg-cyan-400' : '' }} purchase-line"
                        data-purchase-id="{{ purchase.id }}"
                        data-account="{{ purchase.account }}"
                    >
                        <td>
                            {{ purchase.createdAt | date('H:i') }}
                        </td>
                        <td class="text-center">
                            {{ purchase.total }}
                        </td>
                        <td class="text-center">
                            {{ purchase.consigne }}
                        </td>
                        <td class="text-center">
                            {% if purchase.paymentMode %}
                                {{ purchase.paymentMode | slice(0,2) | capitalize }}.
                            {% elseif purchase.account %}
                                {{ purchase.account | slice(0,3) | capitalize }}.
                            {% endif %}
                        </td>
                        <td class="text-end">
                            {% set total = purchase.total + purchase.consigne %}
                            {% set mainTotal = mainTotal + total %}

                            {% set previous = mainPaymentsTotal[purchase.paymentMode]|default(0) %}
                            {% set mainPaymentsTotal = mainPaymentsTotal|merge({ (purchase.paymentMode): previous + total }) %}
                            {{ total }} €
                        </td>
                    </tr>

                {% endfor %}
                    <tr class="bg-gray-200">
                        <td colspan="4" class="font-bold">
                            Total ventes
                        </td>
                        <td class="text-end text-xl font-bold">
                            {{ mainTotal }} €
                        </td>
                    </tr>
                    <tr class="bg-gray-200">
                        <td colspan="4" class="font-bold">
                            Consignes remboursées
                        </td>
                        <td class="text-end text-xl font-bold">
                            {{ returns }} €
                        </td>
                    </tr>
                    <tr class="bg-gray-700 text-white">
                        <td colspan="4" class="font-bold">
                            Total
                        </td>
                        <td class="text-end text-xl font-bold">
                            {{ mainTotal - returns }} €
                        </td>
                    </tr>
                    {% for mode, total in mainPaymentsTotal %}
                        {% if mode == '' %}
                            {% set mode = 'Comptes' %}
                        {% endif %}
                        <tr>
                            <td colspan="4" class="">
                                Total {{ mode }}
                            </td>
                            <td class="text-end text-xl ">
                                {{ total }} €
                            </td>
                        </tr>
                    {% endfor %}
            </tbody>
        </table>

        <div class="text-xl font-bold mt-5">
            En compte
        </div>
        <table class="mt-3">
            {% for account in accounts %}
                <tr data-controller="account" data-account="{{ account.name }}">
                    <td>
                        {{ account.name }}
                    </td>
                    <td class="text-end">
                        {{ account.total }} €
                    </td>
                    <td class="text-end">
                        <button class="button bg-teal-500 text-white" data-action="click->account#checkout" data-payment-mode="espèces">
                            Esp.
                        </button>
                        <button class="button bg-teal-500 text-white" data-action="click->account#checkout" data-payment-mode="chèque">
                            Chq.
                        </button>
                        <button class="button bg-teal-500 text-white" data-action="click->account#checkout" data-payment-mode="CB">
                            CB
                        </button>
                    </td>
                </tr>

            {% endfor %}
        </table>
    </div>

</div>

{% endblock %}
