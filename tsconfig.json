{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "public/build", // output temporaire (optionnel)
        "sourceMap": true
    },
    "include": ["assets/**/*.ts"]
}
